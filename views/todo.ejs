<!DOCTYPE html>

<html>
    <head>
        <title>My todolist</title>
        <style>
            body{margin: 0;padding: 0;width: 100%;text-align: center;font-family: Arial, Helvetica, sans-serif;
            color: blueviolet;}
            a {text-decoration: none; color:blueviolet;}
            ul{list-style: none;}
            .submit,.newtodo{color: blueviolet;margin: 0 5px;border:2px solid blueviolet;padding: 2px 15px;
            font-size: 1rem;border-radius: 1em;background-color: white;}
            .submit:hover{color: white;background-color: blueviolet;}
            footer{margin: 0;}
        </style>
    </head>

    <body>
        <header></header>
        <h1>My todolist</h1>

        <ul>
        <% todolist.forEach(function(todo, index) { %>
            <li><a href="/todo/delete/<%= index %>" title="delete">âœ˜</a> <%= todo %></li>
        <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What shoud I do?</label>
                <input type="text" name="newtodo" id="newtodo" class="newtodo" title="Start typing" autofocus />
                <input type="submit" class="submit"/>
            </p>
        </form>
        <footer>
                <small>&copy; Copyright 2020 Kingsley Umujeyan</small>
        </footer>
    </body>
</html>